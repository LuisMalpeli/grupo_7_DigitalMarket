
<%- include('./partials/head', {title: 'Home'}) %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<!-- hoja de estilos de bootstrap-->

<link rel="stylesheet" href="/css/index.css"> 

<body>
    <%- include('./partials/header') %>
    <main>
         <!-- Inicio banner carusel con class de bootstrap-->
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="/img/arma-tu-pc-new2.png" class="d-block w-100" alt="banner1">
              </div>
              <div class="carousel-item">
                <img src="/img/new-pc-armada.webp" class="d-block w-100" alt="banner2">
              </div>
              <div class="carousel-item">
                <img src="/img/notebooks-verde.webp" class="d-block w-100" alt="banner3">
              </div>
              <div class="carousel-item">
                <img src="/img/game.png" class="d-block w-100" alt="banner4">
              </div>
              <div class="carousel-item">
                <img src="/img/rendimientoExtremo.png" class="d-block w-100" alt="banner5">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
          <!-- fin banner carusel con class de bootstrap-->
          
        <!--inicio productos-->
        <div class="productos">
            <div class="seccion-ofertas">
                <div>
                    <h3 class = "titulo-ofertas">Productos con descuento</h3>
                </div>
                <section class = "contenedor-ofertas">
                    <% for (i=0; i< productos.length; i++) { %>
                        <% if ((productos[i].has_discount) && (productos[i].discount != 0)) { %>
                            <article class = "cuadro-oferta">
                                <% if (productos[i].has_discount == true) { %>
                                    <!--<i class="fas fa-exclamation-circle"></i>-->
                                <% } %>
                                <div class = "cuadro-oferta-imagenes">
                                    <a href="/products/<%=productos[i].id%>">
                                        <img src="/img/productos/<%= productos[i].img %>" alt="<%= productos[i].title %>">
                                    </a>
                                </div>
                                <div class = "cuadro-oferta-texto">
                                    <i class="fas fa-cart-plus"></i>
                                    <div class="precio-descuento">
                                        <p class = "precio">$<%= productos[i].price %></p>
                                        <% if ((productos[i].has_discount == true) && (productos[i].discount != 0)) { %>
                                            <p class = "descuento"><%= productos[i].discount%>% OFF</p>
                                        <% } %>
                                    </div>
                                    <p class="nombre-producto"><%= productos[i].title %></p>
                                </div>
                            </article>
                        <% } %>
                    <% } %>
                </section>
            </div>
            <div class="seccion-intereses">
                <div>
                    <h3 class = "titulo-ofertas">Basado en tus intereses</h3>
                </div>
                <section class = "contenedor-ofertas">
                    <% for (i=0; i< productos.length; i++) { %>
                        <article class = "cuadro-oferta">
                            <% if (productos[i].has_discount == true) { %>
                                <i class="fas fa-exclamation-circle"></i>
                            <% } %>
                            <div class = "cuadro-oferta-imagenes">
                                <a href="/products/<%=productos[i].id%>">
                                    <img src="/img/productos/<%= productos[i].img %>" alt="<%= productos[i].title %>">
                                </a>
                            </div>
                            <div class = "cuadro-oferta-texto">
                                <!--<i class="fas fa-cart-plus"></i>-->
                                <div class="precio-descuento">
                                    <p class = "precio">$<%= productos[i].price %></p>
                                    <% if ((productos[i].has_discount == true) && (productos[i].discount != 0)) { %>
                                        <p class = "descuento"><%= productos[i].discount%>% OFF</p>
                                    <% } %>
                                </div>
                                <p class="nombre-producto"><%= productos[i].title %></p>
                            </div>
                        </article>
                    <% } %>
                </section>
            </div>
        </div> <!--fin productos-->

        <div><!--imagen genesis de main, width 100%-->
            <img src="/img/GenesisBannersin.webp" class="imagen-genesis">
        </div>

        <div class="promociones">
            <div class="email">
                <div class="email-texto">
                    <h2>Registrese con su email para recibir novedades de nuestra tienda!</h2>
                    <span>
                        Nunca se perdera de ofertas exclusivas para clientes registrados.
                    </span>
                    <div class="email-inputs">
                        <input type="email" placeholder="Ingrese su email" name="subscribe-email" class="barra-email">
                        <button>Enviar</button>
                        <!-- 
                            1. AGREGAR CODIGO PARA GUARDAR EL MAIL EN UNA DB DE GENTE SUSCRITA
                            2. DIRECTO A REGISTER CON EL MAIL YA COMPLETADO
                        -->
                    </div>
                </div>
                <img src="/img/bg_subscribe_box.png" alt="">
            </div> 
            <div class="apps">
                <div class="titulo">
                    <h2>Descarga nuestra app</h2>
                </div>
                <div class="app-img">
                    <div class="app-stores">
                        <a href="https://www.apple.com/la/app-store/"><img src="/img/app-img/appStore.png" alt=""></a>
                        <a href="https://play.google.com/store?hl=es_AR&gl=US"><img src="/img/app-img/playStore.png" alt=""></a>
                    </div>
                    <div class="app-bg">
                        <img src="/img/app-img/bg_our_app.png" alt="">
                    </div>
                </div> 
            </div>
        </div>
        
    </main>
    <%- include('./partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <!-- script para el funcionamiento en js de la libreria-->
</body>
</html>
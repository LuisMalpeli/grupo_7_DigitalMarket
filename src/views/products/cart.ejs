    <%- include('../partials/header') %>
    <main>
        <div class="cart">
            <% if (locals.cart && cart.length > 0) { %>
                <div class="modulo-izquierda"> 
                        <table>
                            <thead>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td>Producto</td>
                                    <td>Precio</td>
                                    <td>Cantidad</td>
                                    <td>Subtotal</td>
                                </tr>
                            </thead>
                            <% cart.forEach(item => { %>
                                <tr>
                                    <td class="borrar-container">
                                        <span class="borrar-item">
                                            <!-- <a href="" class="no-link"><i class="fas fa-shopping-cart"></i></a> -->
                                            <a href="/products/deleteFromCart/<%=item.cartId%>" class="no-link" value=<%=item.cartId%>><i class="fas fa-regular fa-circle-minus"></i></a>
                                            <!--Por ahora comentado porque no parece estar funcionando -->
                                        </span>
                                    </td>
                                    <% let srcFodler = '/img/productos/'%>
                                    <td> <img src=<%=srcFodler+item.img %>> </td>
                                    <td> <%=item.title %> </td>
                                    <% if (item.has_discount) { %>
                                        <td> <%=item.price * (1 - item.discount / 100) %> </td>
                                    <% } else { %>
                                        <td> <%=item.price %> </td>
                                    <%} %>
                                    <% let cantidad = 1%>
                                    <td><%= cantidad %></td>
                                    <% if (item.has_discount) { %>
                                        <td> <%=item.price * item.discount / 100 * cantidad%> </td>
                                    <% } else { %>
                                        <td> <%=item.price * cantidad%> </td>
                                    <%} %>
                                    
                                    
                                </tr>
                            <%})  %>
                        

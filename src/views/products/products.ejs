<%- include('../partials/head', {title: 'Home'}) %>
<link rel="stylesheet" href="/css/index.css">
</head>
<body>
    <%- include('../partials/header') %>
    <main>
        <div class="productos">
            <div class="seccion-ofertas">
                <div>
                    <h3 class = "titulo-ofertas">Todos los productos</h3>
                </div>
                
                    <section class = "contenedor-ofertas">
                        <% for (i=0; i< productos.length; i++) { %>
                                <article class = "cuadro-oferta">
                                    <div class = "cuadro-oferta-imagenes">
                                    <a href="/products/<%=productos[i].id%>">
                                        <img src="/img/productos/<%= productos[i].img %>" alt="<%= productos[i].titulo %>">
                                    </a>
                                    </div>
                                    <div class = "cuadro-oferta-texto">
                                        <i class="fas fa-cart-plus"></i>
                                        <div class="precio-descuento">
                                            <p class = "precio">$<%= productos[i].precio %></p>
                                            <% if ((productos[i].enPromocion == true) && (productos[i].descuento != 0)) { %>
                                                <p class = "descuento"><%= productos[i].descuento%>% OFF</p>
                                            <% } %>
                                        </div>
                                        <p class="nombre-producto"><%= productos[i].titulo %></p>
                                    </div>
                                </article>
                        <% } %>
                    </section>
            </div>
        </div> <!--fin productos-->
    </main>
    <%- include('../partials/footer') %>
</body>
</html>
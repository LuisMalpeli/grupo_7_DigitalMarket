<header>
    <!--------header-------->
    <div class="barra-superior">
        <div class = "logo-busqueda"> 
            <div class="logo">
                <a href="/"><img src="/img/logo2.png" alt="logo"></a> 
            </div>
            <div class="busqueda">
                <form action="/" method="GET" class="busqueda-form">
                    <input type="text" placeholder="Buscar productos..." name="search" class="barra-busqueda">
                    <button type="submit"><i class="fa fa-search"></i></button>
                </form>
            </div>
        </div>
        <div class="links-carrito">
            <div class="login-register">
                <% if(locals.isLogged) { %>
                    <a href="/" class="link-user"><img src="/img/users/<%= locals.usuarioLogueado.avatar %>"></a>
                    <div class="botones-login-register">
                        <span><%= locals.usuarioLogueado.user %></span>
                        <div class="links">
                            <a href="/user/profile" class="login-options" id="login">Cuenta</a>
                            <span> / </span>
                            <a href="/user/logout" class="login-options" id="register">Logout</a>
                        </div>
                    </div>
                <% } else { %> 
                    <a href="/" class="link-user"><i class="fas fa-user"></i></a>
                    <div class="botones-login-register">
                        <span>Bienvenido!</span>
                        <div class="links">
                            <a href="/user/login" class="login-options" id="login">Login</a>
                            <span>/</span>
                            <a href="/user/register" class="login-options" id="register">Register</a>
                        </div>
                    </div>
                <%} %> 
            </div>
            <div class="link-cart">
                <a href="/products/cart"><i class="fas fa-shopping-cart"></i></a>
            </div>
            
        </div>
    </div>
    <!--------header-------->
    <!--------nav-------->
    <div class="barra-inferior">
        <div class="menu-nav">
            <div class="dropdown">
                <span class="drop">Categorias</span>
                <i class="fas fa-angle-up"></i>
                <div class="contenido-dropdown">
                    <a href="">Motherboards</a>
                    <a href="">Procesadores</a>
                    <a href="">RAMs</a>
                    <a href="">GPUs</a>
                    <a href="">Memorias</a>
                    <a href="">Fuentes de alimentacion </a>
                </div>
            </div>
            <div class="boton-nav">
                <a href="/products" class="link-nav">Todos los productos</a>
            </div>
            <div class="boton-nav">
                <a href="/products/create" class="link-nav">Vender</a>
            </div>
        </div>  
        <div class="menu-nav2">
            <div class="dropdown">
                <span class="drop">Categorias</span>
                <i class="fas fa-angle-up"></i>
                <div class="contenido-dropdown">
                    <a href="">Motherboards</a>
                    <a href="">Procesadores</a>
                    <a href="">RAMs</a>
                    <a href="">GPUs</a>
                    <a href="">Memorias</a>
                    <a href="">Fuentes de alimentacion </a>
                </div>
            </div>
        </div> 
    </div>
    <!--------nav-------->
</header>
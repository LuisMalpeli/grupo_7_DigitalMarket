<%- include('../partials/head', {title: 'Register'}) %>
    <link rel="stylesheet" href="/css/login-register.css">
    <title>Registrarse</title>
</head>
<body>
    <body>
        <%- include('../partials/header') %>
        <main>
            <div class="login-register-user"> 
                <div class="detail-cuenta">
                    <h3 class="titulo-cuenta">
                        Crear cuenta
                    </h3>
                    <div class="info-usuario">
                        <form action="/user/register" method="POST" enctype="multipart/form-data">
                            <input class="datos" type="text" name= "user" placeholder="Ingrese su usuario"> 
                            <p style="color: red;"> <%= typeof errors != 'undefined' && errors.user ? errors.user.msg : null %> </p>
                            <input class="datos" type="text" name= "fullName" placeholder="Ingrese su nombre y apellido"> <br>
                            <p style="color: red;"> <%= typeof errors != 'undefined' && errors.fullName ? errors.fullName.msg : null %> </p>
                            <span>Seleccione su genero:</span><br>
                            <div class="opciones-genero">
                                <label>Hombre<input type="radio" name= "gender" value="M"></label>
                                <label>Mujer<input type="radio" name= "gender" value="F"></label>
                                <label>Otro<input type="radio" name= "gender" value="X"></label>
                            </div>
                            <p style="color: red;"> <%= typeof errors != 'undefined' && errors.gender ? errors.gender.msg : null %> </p>
                            <br>
                            <input class="datos" type="email" name= "email" placeholder="E-mail">
                            <p style="color: red;"> <%= typeof errors != 'undefined' && errors.email ? errors.email.msg : null %> </p> <br>
                            <!--
                                --------Confirmar email a travez de validaciones-----------
                                <input class="datos" type="email" name= "email" placeholder="Confirmar E-mail"><br>
                            -->
                            <input class="datos" type="password" name="pass" placeholder="ContraseÃ±a"><br>
                            <p style="color: red;"> <%= typeof errors != 'undefined' && errors.pass ? errors.pass.msg : null %> </p>
                            <input class="datos" type="file" name="avatar"><br>
                            <div class="button-user">
                                <input class="boton" type="submit" value= "Registrar">
                            </div>
                        </form>
                    </div>
                   
                </div>
            </div>
        </main>
        <%- include('../partials/footer') %>
        
    
        

</body>
</html>
<%- include('../partials/head', {title: 'Profile'}) %>
    <link rel="stylesheet" href="/css/perfil.css">
    <title>Perfil de usuario</title>
</head>
<body>
    <%- include('../partials/header') %>
    <main>
        <div class="opciones">
            <div class="mi-cuenta">
                <i class="fas fa-user"></i>
                <span>Mi Cuenta</span>
            </div>
            <div class="opciones-cuenta">   
                <ul>
                    <li><a href="">Editar datos</a></li>
                    <li><a href="">Compras</a></li>
                    <li><a href="">Ventas</a></li>
                </ul>
            </div>
        </div>  
        <div class="datos">
            <h2>Mis Datos</h2>
            <div class="datos-cuenta">
                <span class="subtitulos">Datos de la cuenta</span>
                <div class="muestro-datos">
                    <div class="campos"><span>Nombre Completo:</span><%= usuario.fullName%></div>
                    <div class="campos"><span>Email:</span><%= usuario.email%></div>
                </div>
            </div>
            <div class="datos-cuenta">
                <span class="subtitulos">Datos personales</span>
                <div class="muestro-datos">
                    <div class="campos">
                        <span>Genero:</span>
                        <% if (usuario.gender == 'M') { %>
                            <%= 'Masculino'%>
                        <% } else if (usuario.gender == 'F') { %>
                            <%= 'Femenino'%>
                        <% } else { %>
                            <%= 'Otro'%>
                        <% } %>
                    </div>
                    <div class="campos">EDAD ?</div>
                </div>
            </div>
            <div class="datos-cuenta">
                <span class="subtitulos">TEST</span>
                <div class="muestro-datos">
                    <div class="campos">TEST</div>
                    <div class="campos">TEST</div>
                </div>
            </div>
        </div>     
    </main>
    <%- include('../partials/footer') %>
</body>
</html>